<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/ns_nowPlays"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ns_back"
        android:paddingStart="15dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ns_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ns_back"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/ns_ps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ns_ps"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_media_previous" />

    <ImageView
        android:id="@+id/ns_ps"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/ns_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ns_next"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_media_pause" />

    <ImageView
        android:id="@+id/ns_next"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_media_next" />

</RelativeLayout>